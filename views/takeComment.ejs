<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0 minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
	<% if(activity.title.length) { %>
		<title><%= activity.title %></title>
	<% } %>
	<link rel="stylesheet" href="/css/takeComment.css" type="text/css" media="screen" title="no title" charset="utf-8">
</head>
<body>
	<div id="banner">
		<div class="display">
			<input id="station" class="header dark XS">
		</div>
	</div>
	<% if(activity.title.length) { %>
		<h1 align='center'><%= activity.title %></h1>
	<% } %>
	<div class="container">
		<form id="text-box" action="/1" method="post">

			<% if (page == 1) { %>
				<div id="button-box">
				<% activity.buttonbox.forEach(function(button, index) { %>
				<button class="submit button-with-float action-button animate" name="buttoncolor" value="<%= button.bg %>" style="background-color: <%= button.bg %>; border-bottom: 5px solid <%= button.bb %>; width: <%= activity.buttonwidth %>;" datacolor="<%= button.bg %>">Ok</button>
					<% if (index != activity.buttonbox.length - 1) { %>
						<div class="paddiv-with-float"></div>
					<% } %>
				<% }) %>
				</div>
				<input class="msg msg-percent-height" type="text" value="" name="msg" id="msg" autocomplete="off"/>
			<% } %>

			<% if (page == 2) { %>
				<div id="button-box">
				<% activity.buttonbox.forEach(function(button, index) { %>
					<button class="submit button-without-float action-button animate" style="background-color: <%= button.bg %>; border-bottom: 5px solid <%= button.bb %>; height: 50px;" datacolor="<%= button.bg %>">Ok</button>
					<% if (index != activity.buttonbox.length - 1) { %>
						<div class="paddiv-without-float"></div>
					<% } %>
				<% }) %>
					<input class="msg msg-fixed-height" type="text" value="" name="msg" id="msg" autocomplete="off"/>
				</div>
			<% } %>

			<% if (page == 3) { %>
				<div id="button-box">
				<% activity.buttonbox.forEach(function(button, index) { %>
					<button class="submit button-with-float nonactive-button animate" style="color: <%= button.bg %>; border: 5px solid <%= button.bg %>; background:transparent;width: <%= activity.buttonwidth %>;" datacolor="<%= button.bg %>">Ok</button>
					<% if (index != activity.buttonbox.length - 1) { %>
						<div class="paddiv-with-float"></div>
					<% } %>
				<% }) %>
				</div>
				<input class="msg msg-percent-height" type="text" value="" name="msg" id="msg" autocomplete="off"/>
			<% } %>

		</form>
	</div>
	<script src="//cdnjs.net/ajax/libs/jquery/2.1.1-rc2/jquery.min.js"></script>
	<script src="/js/takeComment.min.js"></script>
</body>
</html>

